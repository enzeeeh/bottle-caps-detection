{
  "name": "Bottle Sorter Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:0-3.10",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:1": {}
  },
  "postCreateCommand": "poetry install --no-interaction --no-ansi || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "ms-vscode-remote.remote-containers"
      ]
    }
  },
  "forwardPorts": [],
  "remoteUser": "vscode"
}
